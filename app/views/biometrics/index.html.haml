.container
  .center
    %h3 Biometrics History 
  - if @biometrics.any?
    .card
      %table
        %thead
          %tr
            %th
              %h6.center.bold Date
            %th
              %h6.center.bold Weight
            %th
              %h6.center.bold Body Fat %
            %th
              %h6.center.bold Chest
            %th
              %h6.center.bold Waist
            %th
              %h6.center.bold Biceps
            %th
              %h6.center.bold Forearms
            %th
              %h6.center 
            %hr
        %tbody
          - @biometrics.each do |biometric|
            %tr
              %td
                .col.s2.center
                  = biometric.date
              %td
                .col.s2.center
                  = biometric.weight
              %td
                .col.s2.center
                  = biometric.body_fat_percentage
              %td
                .col.s2.center
                  = biometric.chest
              %td
                .col.s2.center
                  = biometric.waist
              %td
                .col.s2.center
                  = biometric.biceps
              %td
                .col.s2.center
                  = biometric.forearm
              %td
                .col.s2.center
                  = link_to 'Details', user_biometric_path(current_user, biometric)
                  |
                  = link_to 'Delete', user_biometric_path(current_user, biometric), method: :delete
              %br
  - else
    %h4 
      You do not have any biometrics yet. Go ahead and create one!
  - if current_user
    = link_to 'Add New Biometric', new_user_biometric_path(current_user), class: 'btn red darken-4'


