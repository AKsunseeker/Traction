.navbar-fixed
  %nav
    .nav-wrapper
      .row
        - if current_user
          .col.m2.l3.offset-m1.offset-l1
            %a.brand-logo{href: root_path, class: 'grey-text text-lighten-2 logo-size'} 
              = image_tag 'logo2.png', class: 'logo-size'
            %a.button-collapse{"data-activates" => "mobile-demo", :href => "#"}
              %i.material-icons menu
          .col.m8.l7.offset-l1.right
            %ul.hide-on-med-and-down
              %li= link_to 'Dashboard', root_path, class: 'grey-text text-lighten-2'
              %li= link_to 'Profile', user_path(current_user), class: 'grey-text text-lighten-2'
              %li= link_to 'Biometrics', user_biometrics_path(current_user), class: 'grey-text text-lighten-2'
              %li= link_to 'All Workouts', workouts_path, class: 'grey-text text-lighten-2'
              %li= link_to 'Log Out', destroy_user_session_path, method: :delete, class: 'grey-text text-lighten-2'
          %ul#mobile-demo.side-nav
            %li= link_to 'Dashboard', root_path
            %li= link_to 'Profile', user_path(current_user)
            %li= link_to 'Biometrics', user_biometrics_path(current_user)
            %li= link_to 'All Workouts', workouts_path
            %li= link_to 'Log Out', destroy_user_session_path, method: :delete
            %li= link_to 'About Us', about_us_path
        - else
          .col.m3.l3.offset-l1
            %a.brand-logo{href: root_path, class: 'grey-text text-lighten-2 logo-size'} 
              = image_tag 'logo2.png', class: 'logo-size'
            %a.button-collapse{"data-activates" => "mobile-demo", :href => "#"}
              %i.material-icons menu
          .col.m5.l5.offset-l2.right
            %ul.hide-on-med-and-down
              %li.valign-wrapper= link_to 'Log In', new_user_session_path, class: 'grey-text text-lighten-2'
              %li= link_to 'Sign Up', new_user_registration_path, class: 'grey-text text-lighten-2'
              %li= link_to 'All Workouts', workouts_path, class: 'grey-text text-lighten-2'
              %li= link_to 'About Traction', about_us_path, class: 'grey-text text-lighten-2'
            %ul#mobile-demo.side-nav
              %li= link_to 'Log In', new_user_session_path
              %li= link_to 'Sign Up', new_user_registration_path
              %li= link_to 'All Workouts', workouts_path
              %li= link_to 'About Us', about_us_path