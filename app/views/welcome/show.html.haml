.container
  .row
    .col.s12.m12.l12
      %p.notice= notice
      %p.alert= alert
      %h3.center 
        -if current_user.first_name
          Welcome #{current_user.first_name} #{current_user.last_name}
        -else 
          Welcome #{current_user.email}
  .row
    .col.s12.m4.l4
      .card.blue.lighten-3.hoverable
        .card-content
          .row
            .card-title.col.s8.m6.l6.red-text.text-darken-4
              Workouts
            = link_to 'Create', new_workout_path, class: 'btn red col s3 m4 l4' 
          - current_user.workouts.where(complete: false).each do |workout|
            .row
              .col.s7
                = workout.name
              .col.s5
                = link_to 'Do it', do_workout_path(id: workout), method: :post, class: 'red-text text-darken-4'
                | 
                = link_to 'History', workout_history_path(id: workout), class: 'red-text text-darken-4'
            %hr
            / should paginate workouts where complete is false, no @list_workouts
            - if @list_workouts
              = paginate @list_workouts
            %br

      .card.green.lighten-2.hoverable
        .card-content
          .card-title.red-text.text-darken-4
            Completed Workouts
          %br
          - if current_user.workouts.where(complete: true).any?
            - current_user.workouts.where(complete: true).each do |workout|
              .row
                .col.s7
                  = workout.name
                .col.s5
                  = link_to 'Do It Again', do_workout_path(id: workout), method: :post, class: 'red-text text-darken-4'
              %hr
              / should paginate workouts where complete is true
              %br

    .col.s12.m8.l8
      .card.grey.lighten-2.hoverable
        .card-content
          = react_component "Progress", {workouts: @unique_workout_names}            