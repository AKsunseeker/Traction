
.container
  .row
    .col.s10.offset-s1
      %h2.center
        Edit #{resource_name.to_s.humanize}
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = devise_error_messages!
        .field
          = f.label :first_name, class: 'black-text'
          %br/
          = f.text_field :first_name, autofocus: true, class: 'black-text form-border'
        .field
          = f.label :last_name, class: 'black-text'
          %br/
          = f.text_field :last_name, class: 'black-text form-border'
        .field
          = f.label :avatar, class: 'black-text'
          = f.file_field :avatar
        .field
          = f.label :date_of_birth, class: 'black-text'
          %br/
          = f.date_field :date_of_birth, class: 'black-text form-border'
        .field
          = f.label :gender, class: 'black-text'
          %br/
          = f.text_field :gender, class: 'black-text form-border'
        .field
          = f.label :handle, class: 'black-text'
          %br/
          = f.text_field :handle, class: 'black-text form-border'
        .field
          = f.label :email, class: 'black-text'
          %br/
          = f.email_field :email, class: 'black-text form-border'
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %div
            Currently waiting confirmation for: #{resource.unconfirmed_email}
        .field
          = f.label :password, class: 'black-text'
          %i (leave blank if you don't want to change it)
          %br/
          = f.password_field :password, autocomplete: "off", class: 'black-text form-border'
        .field
          = f.label :password_confirmation, class: 'black-text'
          %br/
          = f.password_field :password_confirmation, autocomplete: "off", class: 'black-text form-border'
        .field
          = f.label :current_password, class: 'black-text'
          %i (we need your current password to confirm your changes)
          %br/
          = f.password_field :current_password, autocomplete: "off", class: 'red-text form-border'
        .actions.center
          = f.submit "Update", class: 'btn red darken-4'
      %br
      .row.center    
        %h3 Cancel my account
        %p
          Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn red darken-4'}
        = link_to "Back", :back
